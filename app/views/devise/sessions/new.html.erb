<%= render "masks/header_mini"%>

<div class="devise">
  <div class="devise__title"><i class="fas fa-user">ログイン</i></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="devise__main">
      <div class="devise__main__field">
        <%= f.label :メールアドレス %>&emsp;
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="devise__main__field">
        <%= f.label :パスワード %>&emsp;&emsp;&emsp;
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="devise__main__field">
          <%= f.check_box :remember_me %>
          <%= f.label :記憶させる %>
        </div>
      <% end %>

      <div class="devise__main__actions">
        <%= f.submit "ログイン", class: "devise__main__actions--btn" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>